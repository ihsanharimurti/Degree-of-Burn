<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema atau Gaya Default -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Warna utama -->
        <item name="colorPrimary">#004AAD</item>
        <item name="colorPrimaryDark">#003C8A</item>
        <item name="colorAccent">#82C9F9</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FadeActivityAnimation</item>
    </style>

    <style name="FadeActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:textColorPrimary">@color/abu_abu_landing</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!-- Gaya Khusus untuk Tombol -->
    <style name="ButtonNoDefaultStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="Txt115Lato">
        <item name="android:textSize">11.5sp</item> <!-- Ubah ukuran teks -->
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="Txt115LatoBold">
        <item name="android:textSize">11.5sp</item> <!-- Ubah ukuran teks -->
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="Txt30PoppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Txt24PoppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Txt48PoppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Txt18Lato">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Txt18Poppins">
        <item name="fontFamily">@font/poppins_regular</item>
