    <style name="Txt48BluePoppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Txt115AbuLatoReg">
        <item name="android:textColorHint">@color/abu_abu_landing</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">11.5sp</item>
    </style>


    <style name="Txt30WhiteLatoReg">
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="Txt30LatoBold">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextSubMainTitleBlue">
        <item name="android:textColor">@color/blue_start</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnBody" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_rct_btnbody</item>

    </style>

    <style name="TextBigBlueStyle">
        <item name="android:textColor">@color/blue_start</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextSubMainTitleWhite">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="TextSmall">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">7sp</item>
    </style>



    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundDimEnabled">true</item> <!-- Gelapkan background -->
        <item name="android:backgroundDimAmount">0.5</item> <!-- Transparansi gelap -->
        <item name="android:windowFullscreen">true</item> <!-- Full-screen -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_NoCorners</item>

    </style>

    <style name="ShapeAppearanceOverlay_NoCorners" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item> <!-- Tanpa sudut melengkung -->
    </style>


    <style name="Theme.App.BottomSheetDialog.FullScreen" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheetDialog.FullScreen</item>
    </style>

    <style name="Widget.App.BottomSheetDialog.FullScreen" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="BottomSheetTransparent" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


