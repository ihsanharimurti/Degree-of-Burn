<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:theme="@style/Theme.App.BottomSheetDialog.FullScreen"
    android:elevation="8dp">

    <RelativeLayout
        android:background="@drawable/background_curved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo atau Icon di Bagian Atas -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="80dp" />

        <!-- Teks Judul -->

        <!-- Subjudul -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageLogo"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:layout_marginHorizontal="65dp"
            android:text="@string/login_text_fragment"
            android:textColor="#004AAD"
            style="@style/TextMainTitle"
            android:textStyle="bold" />

        <!-- Input Email/No. HP -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_marginHorizontal="65dp"
            android:text="@string/login_desc"
            android:textColor="@color/abu_abu_landing"
            android:letterSpacing="0.05"
            android:textSize="11.5sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSubtitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Email/No. HP"
            android:layout_marginHorizontal="65dp"
            style="@style/TextSubMainTitle"
            />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmail"
            android:layout_marginTop="4dp"
            android:hint="@string/email_no_hp"
            android:layout_marginHorizontal="65dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:textAppearance="@style/HintStyle"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editEmail"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/password"
            style="@style/TextSubMainTitle"
            android:layout_marginHorizontal="65dp"
            />

        <!-- Input Password -->
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPassword"
            android:layout_marginTop="4dp"
            android:hint="Password"
            android:layout_marginHorizontal="65dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:textAppearance="@style/HintStyle"
            android:padding="10dp" />

        <!-- Link Lupa Password -->
        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editPassword"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="65dp"
            android:text="@string/lupa_password"
            android:textSize="11.5sp"
            android:textColor="#004AAD" />

        <!-- Tombol Masuk -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textForgotPassword"
            android:layout_marginTop="24dp"
            android:text="@string/login_button"
            android:backgroundTint="#004AAD"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="65dp"
            android:textAllCaps="false"
            android:padding="12dp" />

        <!-- Link Daftar -->
        <TextView
            android:id="@+id/textRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="@string/belum_punya_akun_daftar_di_sini"
            android:textColor="#666666"
            android:textSize="11.5sp" />

    </RelativeLayout>
</ScrollView>
